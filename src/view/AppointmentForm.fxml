<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPanel"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="640"
            prefWidth="441.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AppointmentFormController"
>
    <BorderPane prefHeight="640.0" prefWidth="441.0">
        <center>
            <VBox prefHeight="560.0" prefWidth="551" BorderPane.alignment="CENTER">
                <HBox alignment="BOTTOM_LEFT" prefHeight="71.0" prefWidth="441.0">
                    <Label alignment="CENTER" contentDisplay="CENTER" fx:id="appointmentFormTitle">
                        <font>
                            <Font name="SansSerif Regular" size="36.0"/>
                        </font>
                        <padding>
                            <Insets left="30.0"/>
                        </padding>
                    </Label>
                </HBox>
                <Separator opacity="0.35" prefHeight="0.0" prefWidth="600.0">
                    <VBox.margin>
                        <Insets bottom="30.0" top="5.0"/>
                    </VBox.margin>
                </Separator>
                <GridPane prefHeight="430.0" prefWidth="302.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="110.0" prefWidth="110.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="180.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>

                    <Label text="Appointment ID">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label layoutX="10.0" layoutY="17.0" text="Title" GridPane.rowIndex="1">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Description" GridPane.rowIndex="2">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Location" GridPane.rowIndex="3">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Type" GridPane.rowIndex="4">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Date" GridPane.rowIndex="5">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Duration" GridPane.rowIndex="6">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Start Time" GridPane.rowIndex="7">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Contact ID" GridPane.rowIndex="8">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="Customer ID" GridPane.rowIndex="9">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>
                    <Label text="User ID" GridPane.rowIndex="10">
                        <padding>
                            <Insets left="10.0"/>
                        </padding>
                    </Label>


                    <TextField disable="true" GridPane.columnIndex="1" fx:id="appointmentIDTextField">
                        <GridPane.margin>
                            <Insets left="10.0" right="10.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="titleTextField">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="descriptionTextField">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="locationTextField">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </TextField>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="typeTextField">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </TextField>
<!--                    <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="datePickerField" editable="false" onAction="#loadTimeDurationComboBox">-->
                    <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="datePickerField" editable="false">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </DatePicker>
<!--                    <ComboBox prefWidth="150.0" promptText="Hour" fx:id="timeDurationComboBox" onAction="#loadStartTimesComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" >-->
                    <ComboBox prefWidth="150.0" promptText="Hour" fx:id="timeDurationComboBox" onAction="#handleTimeDurationChoice" GridPane.columnIndex="1" GridPane.rowIndex="6" >
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                        </GridPane.margin>
                    </ComboBox>
                    <ComboBox prefWidth="150.0" promptText="Hour" fx:id="startTimesComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7" onAction="#handleStartTimeChoice">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                        </GridPane.margin>
                    </ComboBox>
                    <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="8" fx:id="contactsComboBox" onAction="#handleContactChoice">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </ComboBox>
                    <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="9" fx:id="customersComboBox" onAction="#handleCustomerChoice">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </ComboBox>
                    <ComboBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="10" fx:id="userIDComboBox" onAction="#handleUserChoice">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                        </GridPane.margin>
                    </ComboBox>
                </GridPane>
            </VBox>
        </center>
        <bottom>
            <HBox alignment="TOP_CENTER" prefHeight="84.0" prefWidth="567.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
                <Button mnemonicParsing="false" fx:id="saveButton" onAction="#saveAppointment">
                    <HBox.margin>
                        <Insets left="15.0" right="15.0"/>
                    </HBox.margin>
                </Button>

                <Button cancelButton="true" mnemonicParsing="false" text="Cancel" fx:id="cancelButton" onAction="#closeWindow">
                    <HBox.margin>
                        <Insets left="15.0" right="15.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
