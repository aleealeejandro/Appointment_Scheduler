<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="mainPanel"
            maxHeight="220"
            maxWidth="500"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="220.0"
            prefWidth="500.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.Login"
>
    <center>
        <VBox prefHeight="344.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <AnchorPane prefHeight="33.0" prefWidth="600.0" />
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="72.0" text="Username" textAlignment="RIGHT" />
                        <AnchorPane prefHeight="50.0" prefWidth="26.0" />
                        <TextField fx:id="usernameField" prefHeight="30.0" prefWidth="160.0" />
                        <AnchorPane prefHeight="50.0" prefWidth="153.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="66.0" text="Password" textAlignment="RIGHT" />
                        <AnchorPane prefHeight="50.0" prefWidth="33.0" />
                        <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="160.0" />
                        <AnchorPane prefHeight="50.0" prefWidth="152.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="600.0">
                    <children>
                        <Button fx:id="loginButton" onAction="#loginButtonClicked" alignment="CENTER" mnemonicParsing="false" text="Login" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="timezoneLabel" text="Timezone:" />
                <AnchorPane prefHeight="17.0" prefWidth="18.0" />
                <Label fx:id="localTimezoneLabel" />
                <AnchorPane prefHeight="50.0" prefWidth="51.0" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
