                                    <Label alignment="CENTER" prefHeight="17.0" prefWidth="64.0" text="Search by">
                                        <HBox.margin>
                                            <Insets left="50.0" right="5.0"/>
                                        </HBox.margin>
                                    </Label>
                                    <ChoiceBox prefWidth="150" fx:id="searchCustomersByChoiceBox" onAction="#handleCustomerSearchFilterChoice"/>
